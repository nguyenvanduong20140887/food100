<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<% if logged_in? %>
  <%= link_to t(".new"), new_food_path, class: "btn btn-lg btn-primary" %>
<% end %>
<div class="row">
  <div class="col-md-3">
    <div class="form-group">
      <%= form_tag foods_path, method: :get, id: "search-form" do %>
      <p>
        <%= text_field_tag :search, params[:search], class: "text_field_tag_style",
          placeholder: t(".search"), size: 15 %>
        <%= submit_tag t(".search"), class: "btn btn-lg btn-primary" %>
      </p>
      <% end %>
    </div>
  </div>
  <div class="col-md-5">
    <table class="table">
      <thead>
        <tr>
          <th><%= t ".image" %></th>
          <th><%= t ".name" %></th>
        </tr>
      </thead>
    <%= render @food %>
    </table>
  </div>
  <% unless logged_in? %>
    <div class="col-md-4">
      <table class="table">
        <thead>
          <tr>
            <th><%= t ".name" %></th>
            <th><%= t ".price" %></th>
          </tr>
        </thead>
        <%= render "foods/order" %>
      </table>
    </div>
  <% end %>
</div>
